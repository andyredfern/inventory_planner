{
    "name": "andyredfern/inventory_planner",
    "type": "library",
    "description": "A PHP wrapper for Inventory Planner's API",
    "keywords": [
        "inventory planner", "api", "wrapper", "php","andyredfern"
    ],
    "homepage": "https://github.com/andyredfern/inventory_planner",
    "license": "MIT",
    "authors": [
        {
            "name": "Andy Redfern",
            "email": "andy@redfern.it",
            "homepage": "http://redfern.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.6.0",
        "guzzlehttp/guzzle": "^6.5",
        "psr/log": "^1.1",
        "vlucas/phpdotenv": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"       
    },
    "autoload": {
        "psr-4": {
            "Aredfern\\Invplan\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aredfern\\Invplan\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
